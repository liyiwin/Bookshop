<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="411dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="#14000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/muti_viewPager"
        android:layout_width="409dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muti_viewPager">

        <ImageView
            android:id="@+id/muti_dot_five"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/enable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/muti_dot_four"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/enable"
            app:layout_constraintEnd_toStartOf="@+id/muti_dot_five"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/muti_dot_three"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/enable"
            app:layout_constraintEnd_toStartOf="@+id/muti_dot_four"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/muti_dot_two"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/enable"
            app:layout_constraintEnd_toStartOf="@+id/muti_dot_three"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/muti_dot_one"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/enable"
            app:layout_constraintEnd_toStartOf="@+id/muti_dot_two"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>