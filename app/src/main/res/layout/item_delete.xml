<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/my_note_delete"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/my_note_title_delete"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="title"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/my_delete_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/my_delete_img"
            android:layout_width="69dp"
            android:layout_height="110dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/book_one" />

        <View
            android:id="@+id/divider36"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_delete_img" />

        <TextView
            android:id="@+id/my_deletenote_date"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toEndOf="@+id/my_delete_img"
            app:layout_constraintTop_toBottomOf="@+id/my_note_title_delete" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>