<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="411dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#14000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/single_viewPager"
        android:layout_width="409dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewPager">

        <ImageView
            android:id="@+id/dot_one"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toStartOf="@+id/dot_two"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enable" />

        <ImageView
            android:id="@+id/dot_two"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toStartOf="@+id/dot_three"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enable" />

        <ImageView
            android:id="@+id/dot_three"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toStartOf="@+id/dot_four"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enable" />

        <ImageView
            android:id="@+id/dot_four"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toStartOf="@+id/dot_five"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enable" />

        <ImageView
            android:id="@+id/dot_five"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enable" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>